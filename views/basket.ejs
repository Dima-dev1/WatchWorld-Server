<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Basket</title>
  </head>

  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #ebf8ed;
    }

    .header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 20px 40px;
      border-bottom: 2px solid #000;
    }

    .header h3 {
      margin: 0;
      margin-left: 100px;
    }

    .header h3 a {
      color: #333;
      text-decoration: none;
    }

    .navigation {
      display: flex;
      gap: 20px;
      flex: 1;
      justify-content: center;
      align-items: center;
    }

    .navigation a {
      text-decoration: none;
      color: #000;
      font-weight: bold;

    }

    .header-icons {
      display: flex;
      gap: 10px;
      margin-right: 100px;
    }

    .header-icons button {
            background: none;
            cursor: pointer;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 30%;
            text-decoration: none;
        }

    .header-icons img {
      width: 24px;
      height: 24px;
    }

    .dashboard {
        font-weight: bold;
        background-color: #000;
        color: white !important;
        padding: 10px 20px;
        border-radius: 30px;
        
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s ease, transform 0.3s ease;
        }
      .dashboard:hover {
        background-color: #333;
      }

    .main-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 40px;
    }

    .page-title {
      font-size: 32px;
      font-weight: bold;
      text-align: center;
      margin-bottom: 30px;
    }

    .products-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 32px;
      justify-content: center;
    }


    .cart-item {
      background: #fff;
      width: 260px;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
      text-align: center;
    }

    .cart-item img {
      width: 150px;
      margin-bottom: 10px;
    }

    .cart-item h3 a {
      text-decoration: none;
      color: #000;
    }

    .cart-item button {
      margin: 5px 0;
      cursor: pointer;
    }

    .remove {
      background-color: red;
      color: white;
      border: none;
      padding: 6px 10px;
    }

    .empty-message {
      text-align: center;
      padding: 60px 20px;
    }

    .empty-message a {
            display: inline-block;
            background-color: #3350E9;
            color: white;
            padding: 12px 32px;
            border-radius: 10px;
            text-decoration: none;
            font-weight: bold;
        }
        .empty-message a:hover {
            background-color: #4e67e5;
        }


    .cart-total {
      width: 100%;
      text-align: center;
      margin-top: 40px;
      font-weight: bold;
    }
  </style>

  <body>
    <div class="header">
      <h3><a href="/">WatchWorld</a></h3>

      <div class="navigation">
        <a href="/home">Home</a>
        <a href="/home#about">About Us</a>
        <a href="/products">Catalog</a>
        <a href="/home#reviews">Reviews</a>
        <a href="/home#contact">Contact Us</a>
        <% if (user && user.role === "superadmin") { %>
          <a class="dashboard" href="/admin">Dashboard</a>
        <% } %>
      </div>

      <div class="header-icons">
        <a href="/basket">
          <button><img src="/images/cart.svg" /></button>
        </a>
        <a href="/favourite">
          <button><img src="/images/heart.svg" /></button>
        </a>
      </div>
    </div>

    <div class="main-container">
      <h1 class="page-title">My Basket</h1>

      <div id="basket-container">
        <div class="empty-message" id="empty-message" style="display: none">
          <h2>Your basket list is empty</h2>
          <p>Browse our catalog and add watches you like to your basket!</p>
          <a href="/products">View Catalog</a>
        </div>

        <div class="products-grid" id="cart-grid"></div>
      </div>
    </div>

    <script src="/js/storage.js"></script>
    <script>
      function renderCart() {
        const cart = Storage.getCart();
        const grid = document.getElementById("cart-grid");
        const emptyMessage = document.getElementById("empty-message");

        grid.innerHTML = "";

        if (cart.length === 0) {
          emptyMessage.style.display = "block";
          grid.style.display = "none";
          return;
        }

        emptyMessage.style.display = "none";
        grid.style.display = "flex";

        let html = "";
        let total = 0;

        cart.forEach(product => {
          let productTotal = product.price * product.quantity;
          total += productTotal;

          html += `
            <div class="cart-item">
              <img src="${product.image}">
              <h3>
                <a href="/products/${product.id}">
                  ${product.title}
                </a>
              </h3>
              <div>Price = £${product.price}</div>
              <button onclick="updateCartQuantity(${product.id}, ${product.quantity - 1})">-</button>
              <div>Quantity = ${product.quantity}</div>
              <button onclick="updateCartQuantity(${product.id}, ${product.quantity + 1})">+</button>
              <div>Total = £${productTotal}</div>
              <button class="remove" onclick="removeItem(${product.id})">REMOVE</button>
            </div>
          `;
        });

        html += `
          <div class="cart-total">
            <div>Items (${cart.reduce((t, i) => t + i.quantity, 0)})</div>
            <div>Total = £${total}</div>
            <button onclick="clearCart()">clear</button>
          </div>
        `;

        grid.innerHTML = html;
      }

      function removeItem(id) {
        Storage.removeFromCart(id);
        renderCart();
      }

      function clearCart() {
        Storage.clearCart();
        renderCart();
      }

      function updateCartQuantity(id, quantity) {
        if (quantity <= 0) {
          removeItem(id);
        } else {
          Storage.updateCartQuantity(id, quantity);
          renderCart();
        }
      }

      document.addEventListener("DOMContentLoaded", renderCart);
    </script>
  </body>
</html>
